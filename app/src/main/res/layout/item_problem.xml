<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item_menu"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ci_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/anorexia" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/cho"
        android:textSize="16sp"
        tools:text="The label on this shirt itches meThe label on this shirt itches meThe label on this shirt itches meThe label on this shirt itches me" />

    <CheckBox
        android:id="@+id/cb_problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>